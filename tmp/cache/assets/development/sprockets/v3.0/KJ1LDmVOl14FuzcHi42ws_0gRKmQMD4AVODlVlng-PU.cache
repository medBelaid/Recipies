      Recipe.recipes(1).query({
        userId: $scope.user.id,
        mode: 'f'
      }).$promise.then(function(res) {
        var i, len, recipe, ref, results;
        $scope.favoriteRecipes = res;
        ref = $scope.favoriteRecipes;
        results = [];
        for (i = 0, len = ref.length; i < len; i++) {
