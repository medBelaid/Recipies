  this.cooking.controller('viewRecipeCtrl', function($scope, $log, Recipe, Ingredient, Favorite, $routeParams) {
    var id;
    id = $routeParams.id;
    $scope.countLikes = 0;
    $scope.countLikes = Favorite.get({
      id: id
    });
    Recipe.recipes(1).get({
      id: id
    }).$promise.then(function(res) {
